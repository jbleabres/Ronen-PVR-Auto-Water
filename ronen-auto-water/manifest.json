{
    "manifest_version": 3,
    "name": "Ronen - PVR - Auto Water",
    "version": "1.0",
    "description": "Call Water Function on load of page.",
    "permissions": ["scripting"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "128": "icon.png"
    }
  }
  